{
  "name": "mentorxpool",
  "version": "1.0.0",
  "description": "a service that records your ideas",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/server.js",
    "start:dev": "ts-node-dev --respawn --transpileOnly server.ts",
    "test": "export NODE_ENV=test && nyc _mocha -r ts-node/register test/**/*.spec.ts",
    "test:watch": "export NODE_ENV=test && nyc _mocha -r ts-node/register test/** --watch",
    "lint": "tslint --project .",
    "lint:fix": "tslint --fix --project ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/victor-enogwe/mentorXpool.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/victor-enogwe/mentorXpool/issues"
  },
  "homepage": "https://github.com/victor-enogwe/mentorXpool#readme",
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/cors": "2.8.4",
    "@types/dotenv": "6.1.1",
    "@types/helmet": "0.0.43",
    "@types/http-errors": "1.6.1",
    "@types/mocha": "5.2.6",
    "@types/morgan": "1.7.35",
    "@types/node": "11.13.0",
    "@types/supertest": "2.0.7",
    "chai": "4.2.0",
    "dotenv": "7.0.0",
    "mocha": "6.0.2",
    "nyc": "13.3.0",
    "sinon": "7.3.1",
    "supertest": "4.0.2",
    "ts-node-dev": "1.0.0-pre.32",
    "tslint": "5.15.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.4.1"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.16.4",
    "express-validator": "5.3.1",
    "helmet": "3.16.0",
    "http-errors": "1.7.2",
    "mongoose": "5.4.20",
    "winston": "3.2.1"
  },
  "nyc": {
    "all": true,
    "check-coverage": false,
    "eager": true,
    "cache": true,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "clean": true,
    "temp-directory": "./coverage/.tmp"
  }
}
